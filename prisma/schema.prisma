generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  KASIR
}

enum TipePenyesuaian {
  MASUK
  KELUAR
}

model Pengguna {
  id           String   @id @default(cuid())
  nama         String
  username     String   @unique
  hashKataSandi String  @map("hash_kata_sandi")
  role         Role
  aktif        Boolean  @default(true)
  dibuatPada   DateTime @default(now()) @map("dibuat_pada")
  diperbaruiPada DateTime @updatedAt @map("diperbarui_pada")

  penjualan        Penjualan[]
  penyesuaianStok  PenyesuaianStok[]

  @@map("pengguna")
}

model Produk {
  id        String   @id @default(cuid())
  kode      String   @unique
  nama      String
  kategori  String?
  satuan    String?
  harga     Decimal  @db.Decimal(10, 2)
  stok      Int      @default(0)
  aktif     Boolean  @default(true)
  dibuatPada   DateTime @default(now()) @map("dibuat_pada")
  diperbaruiPada DateTime @updatedAt @map("diperbarui_pada")

  itemPenjualan    ItemPenjualan[]
  penyesuaianStok  PenyesuaianStok[]

  @@map("produk")
}

model Penjualan {
  id              String   @id @default(cuid())
  noFaktur        String   @unique @map("no_faktur")
  idKasir         String   @map("id_kasir")
  total           Decimal  @db.Decimal(10, 2)
  jumlahBayar     Decimal  @db.Decimal(10, 2) @map("jumlah_bayar")
  jumlahKembalian Decimal  @db.Decimal(10, 2) @map("jumlah_kembalian")
  dibuatPada      DateTime @default(now()) @map("dibuat_pada")

  kasir         Pengguna        @relation(fields: [idKasir], references: [id])
  itemPenjualan ItemPenjualan[]

  @@map("penjualan")
}

model ItemPenjualan {
  id          String  @id @default(cuid())
  idPenjualan String  @map("id_penjualan")
  idProduk    String  @map("id_produk")
  kode        String
  namaProduk  String  @map("nama_produk")
  jumlah      Int
  harga       Decimal @db.Decimal(10, 2)
  subtotal    Decimal @db.Decimal(10, 2)

  penjualan Penjualan @relation(fields: [idPenjualan], references: [id])
  produk    Produk    @relation(fields: [idProduk], references: [id])

  @@map("item_penjualan")
}

model PenyesuaianStok {
  id        String          @id @default(cuid())
  idProduk  String          @map("id_produk")
  idPengguna String         @map("id_pengguna")
  tipe      TipePenyesuaian
  jumlah    Int
  catatan   String?
  dibuatPada DateTime       @default(now()) @map("dibuat_pada")

  produk   Produk   @relation(fields: [idProduk], references: [id])
  pengguna Pengguna @relation(fields: [idPengguna], references: [id])

  @@map("penyesuaian_stok")
}
